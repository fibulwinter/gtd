<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/task_list_item"
              android:layout_width="fill_parent"
              android:padding="2dip"
              android:orientation="vertical"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/task_list_item_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="20dip"
            android:paddingTop="5dip"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="right"
            android:text="Header"
            />
    <TextView
            android:id="@+id/task_list_item_header_a"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:visibility="gone"
            android:background="@color/white"
            android:text=""
            />
    <LinearLayout
            android:id="@+id/task_list_item_main_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

        <ImageButton
                android:id="@+id/task_list_item_status"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:layout_centerVertical="true"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/task_list_item_text"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text=""
                />
        <TextView
                android:id="@+id/task_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:textColor="@color/white"
                android:gravity="right"
                android:text="10:24:11"
                />
    </LinearLayout>
</LinearLayout>
