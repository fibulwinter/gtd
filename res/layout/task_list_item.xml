<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/task_list_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/task_list_item_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableBottom="@color/white"
            android:gravity="right"
            android:text="Header"
            />
    <ImageButton
            android:id="@+id/task_list_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_list_item_header"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/background_dark"
            android:clickable="true"
            android:gravity="center"
            />
    <TextView
            android:id="@+id/task_list_item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/task_list_item_header"
            android:layout_toLeftOf="@id/task_list_item_status"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:text="Text"
            />
    <LinearLayout android:id="@+id/extra_row"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@id/task_list_item_text"
                  android:visibility="gone"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentBottom="true">
        <TextView
                android:id="@+id/task_context_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="Context"
                android:textColor="#6666cc"
                android:background="#303066"
                />
        <TextView
                android:id="@+id/time_constraints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="Start"
                android:textColor="@color/white"
                />
    </LinearLayout>
</RelativeLayout>
