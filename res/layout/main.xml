<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Spinner
            android:id="@+id/mode_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <Button android:id="@+id/new_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_task"
                android:onClick="onNewTask"
                />
        <TextView android:id="@+id/dueTodayCounter"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:minWidth="50dp"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:text="@string/today_warning"
                  android:clickable="true"
                  android:onClick="onDueTodayCounter"/>
        <TextView android:id="@+id/overdueCounter"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:minWidth="50dp"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:text="@string/overdue_warning"
                  android:clickable="true"
                  android:onClick="onOverdueCounter"/>
        <TextView android:id="@+id/projectWithoutActionCounter"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/projects_without_actions_warning"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:minWidth="50dp"
                  android:clickable="true"
                  android:onClick="onProjectWithoutActionCounter"/>
    </LinearLayout>
    <ListView
            android:id="@+id/taskList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
</LinearLayout>

